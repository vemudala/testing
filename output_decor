<app-outputtest (onadddata)="dataadded($event)"></app-outputtest>  // focus on this 5

##########################################app.component.ts ########################################## 4
dataArr=[{name:"x"}];
  constructor(){}
  dataadded(data:{name:string,roll:number}){ //6
    this.dataArr.push({
      name:data.name   
    })  
  }
##########################################outputtest.component.html ########################################## 1
<input type="text" [(ngModel)]="name">
<button (click)="clk()">clkk</button>  

##########################################outputtest.component.ts  ################################# 2
 @Output() onadddata=new EventEmitter<{name:string}>(); //7
name="";
  constructor() { }
  clk(){
this.onadddata.emit({
  name:this.name
})
  }
  
